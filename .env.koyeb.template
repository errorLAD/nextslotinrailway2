# Koyeb Environment Variables Template
# Add these variables in Koyeb Dashboard → App → Settings → Environment Variables

# ============================================
# REQUIRED VARIABLES
# ============================================

# Django Secret Key (generate a new one for production)
SECRET_KEY=your-super-secret-key-here

# Domain Configuration
DEFAULT_DOMAIN=nextslot.in
DEFAULT_SCHEME=https

# Debug Mode
DEBUG=False

# Port (Koyeb uses 8000 by default)
PORT=8000

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Use Koyeb's managed PostgreSQL or external service like Neon, Supabase, or Railway

# Option 1: Full DATABASE_URL (recommended)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Option 2: Individual credentials
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=your_db_name
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=your_db_host
# DB_PORT=5432

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@nextslot.in

# ============================================
# PAYMENT GATEWAY
# ============================================
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# ============================================
# OPTIONAL SERVICES
# ============================================

# Twilio SMS (PRO Plan)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Google Calendar API (PRO Plan)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI API (AI Features)
OPENAI_API_KEY=your-openai-api-key

# Cloudflare (Custom Domains)
CLOUDFLARE_API_TOKEN=your-cloudflare-token
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_ACCOUNT_ID=your-account-id

# Site Configuration
SITE_NAME=NextSlot
SITE_URL=https://nextslot.in
